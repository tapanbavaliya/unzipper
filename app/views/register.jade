html
  head
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css', rel='stylesheet')
    link(href='../public/css/site.css', rel='stylesheet')
    title Register
  body.signBody
    .container
      form.form-signup(role='form',method='post')
        h2.form-signup-heading Create an Account
        br
        input.form-control(type='text', placeholder='User name', autofocus='', name='name')
        br
        input.form-control(type='text', placeholder='Email address', name='email')
        br
        input.form-control(type='password', placeholder='Password', name='pass')
        br
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Create Account
        .bottomline
        .pagination
          a.pull-right(href='login') Sign In